@{
    Layout = "";
}
@model Models.projectModels.Applicants;

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] | Job-matching</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>



 <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Employee</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav ">
                   <li class="nav-item">
                            <a asp-action="MainIndex" asp-controller="Main" class="nav-link text-dark btn-outline-primary" >Employee Index</a>

                        </li>                  
            </ul>
             <ul class="navbar-nav ml-auto">

                   <li class="nav-item  pull-right">
                        <a asp-action="Resume" asp-controller="Main" class="nav-link text-dark btn-outline-primary">My Resume</a>
                </li>

                   <li class="nav-item  pull-right">
                        <a asp-action="GetEmployeeApplications" asp-asp-controller="Main" class="nav-link text-dark btn-outline-primary">My Applications   </a>
                </li>
                     <li class="nav-item  pull-right">
                        <a class="nav-link text-dark btn-outline-primary">new post related to ur profile   </a>
                </li>
            
                   <li class="nav-item  pull-right">
                        <a class="nav-link text-dark btn-outline-primary">@User.Identity.Name</a>
                </li>
                        <li class="nav-item  pull-right">
                            <a class="nav-link text-dark btn-outline-primary" asp-area="" asp-controller="HiringManager" asp-action="Logout">Logout</a>

                </li>
            </ul>
            </div>
        </div>
</nav>


<div class="container">
    <h1>Edit Resume</h1>

    <form action="EditResume" method="POST">

            <div class="row">
        <div class="col-lg-12">
            <div class="form-group">
                <label>Enter your Position:</label>
                <input asp-for="JobPostion" type="text" class="form-control required" placeholder="Enter first name" tabindex="1">
            </div>
             <div class="form-group">
                <label>Enter Your LinkedInLink:</label>
                <input asp-for="LinkedInLink" type="text" class="form-control required" placeholder="Enter last name" tabindex="2">
            </div>
    
            <div class="card-footer">
                <center>
                    <button type="submit" class="btn btn-primary">Update</button>
                    <a asp-action="Resume" asp-controller="Main"   class="btn btn-primary">Cancel</a>

                </center>
            </div>
        </div>
    </div>

    </form>
    
</div>
