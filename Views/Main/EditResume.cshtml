@{
    
    Layout ="~/Views/Shared/_MainViewLayout.cshtml";

}
@model Models.projectModels.Applicants;



<div style="margin-top: 5rem;" class="container">
    <h1>Edit Resume</h1>

    <form action="EditResume" method="POST">

            <div class="row">
        <div class="col-lg-12">
            <div class="form-group">
                <label>Enter your Full Name:</label>
                <input asp-for="FullName" type="text" class="form-control required" placeholder="Enter Full Name " tabindex="1">
            </div>
             <div class="form-group">
                <label>Enter Your Email:</label>
                <input asp-for="Email" type="text" class="form-control required" placeholder="Enter Email " tabindex="2">
            </div>
                <div class="form-group">
                <label>Enter Your PhoneNumber:</label>
                <input asp-for="PhoneNumber" type="text" class="form-control required" placeholder="Enter Phone Number " tabindex="2">
            </div>
                <div class="form-group">
                <label>Enter Your LinkedInLink:</label>
                <input asp-for="LinkedInLink" type="text" class="form-control required" placeholder="Enter LinkdedIN link" tabindex="2">
            </div>
                <div class="form-group">
                <label>Enter Your JobPosition:</label>
                <input asp-for="JobPostion" type="text" class="form-control required" placeholder="Enter Job Position" tabindex="2">
            </div>
    
            <div class="card-footer">
                <center>
                    <button type="submit" class="btn btn-primary">Update</button>
                    <a asp-action="Resume" asp-controller="Main"   class="btn btn-primary">Cancel</a>

                </center>
            </div>
        </div>
    </div>

    </form>
    
</div>
