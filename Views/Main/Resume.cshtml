@{
    Layout = "";
}
@model Models.projectModels.Applicants;

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] | Job-matching</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>


 <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Employee</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav ">
                   <li class="nav-item">
                            <a asp-action="MainIndex"asp-controller="Main" class="nav-link text-dark btn-outline-primary" >Employee Index</a>

                        </li>                  
            </ul>
             <ul class="navbar-nav ml-auto">

                   <li class="nav-item  pull-right">
                        <a asp-action="Resume" asp-controller="Main" class="nav-link text-dark btn-outline-primary">My Resume</a>
                </li>

                   <li class="nav-item  pull-right">
                        <a class="nav-link text-dark btn-outline-primary">My Applications   </a>
                </li>
            
                   <li class="nav-item  pull-right">
                        <a class="nav-link text-dark btn-outline-primary">@User.Identity.Name</a>
                </li>
                        <li class="nav-item  pull-right">
                            <a class="nav-link text-dark btn-outline-primary" asp-area="" asp-controller="HiringManager" asp-action="Logout">Logout</a>

                </li>
            </ul>
            </div>
        </div>
</nav>

<d class="container">
    <h1>Resume <span><a asp-action="EditResume" asp-controller="Main">Edit Resume</a></span></h1>

    <div class="card">
        <div class="card-boy">

            <div>
                <h3>Name : @Model.FirstName </h3>
                <h3>Phone Number : @Model.PhoneNumber</h3>
                <h3>Email  : @Model.Email</h3>
            </div>
            <div>
                <h3>Job position :@Model.JobPostion </h3>
            </div>
            <div>   
                <h3>LinkedIn Link :<a target="_blank" href="http://@Model.LinkedInLink"> @Model.LinkedInLink</a></h3>
            </div>
        </div>

    </div>


    