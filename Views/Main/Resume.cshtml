@{
    
    Layout ="~/Views/Shared/_MainViewLayout.cshtml";

}
    <link rel="stylesheet" href="~/css/resume.css" />

@model Models.projectModels.Applicants;


<div style="margin-top: 5rem;" class="container">
    <div class="main-body">


          <div class="row gutters-sm">
                    <div class="col-md-4 mb-3">
                    <div class="card">
                        <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <img src="~/image/p.png" alt="Person profile" class="rounded-circle" width="150">
                            <div  class="mt-3">
                            <p>@Model.FullName</p>
                            <p class="text-secondary mb-1">@Model.JobPostion</p>
                            <p class="text-muted font-size-sm">Addis Ababa</p>

                            </div>
                        </div>
                         </div>
                        </div>
                    </div>

                <div class="col-md-8">
                    <div class="card mb-3">
                        <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                            <h6 class="mb-0">Full Name</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                            @Model.FullName
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                            <h6 class="mb-0">Email</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                            @Model.Email
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                            <h6 class="mb-0">Phone</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                            @Model.PhoneNumber
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                            <h6 class="mb-0">Linkded In Link</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <a target="_blank" href="@Model.LinkedInLink"> @Model.LinkedInLink</a>

                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                            <h6 class="mb-0">Job Position</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.JobPostion
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-12">
                             <span><a class="btn btn-outline-primary" asp-action="EditResume" asp-controller="Main">Edit Resume</a></span>

                            </div>
                        </div>
                        </div>
                </div>

    </div>


</div>

