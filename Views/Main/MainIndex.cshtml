@using Models.projectModels;
@model MainIndexModels;
@using System.Web;
@using  Microsoft.AspNetCore.Http;

@{
    Layout ="";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] | Job-matching</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>


 <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Employee</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav ">
                   <li class="nav-item">
                            <a class="nav-link text-dark btn-outline-primary" >Employee Index</a>

                        </li>                  
            </ul>
             <ul class="navbar-nav ml-auto">

                   <li class="nav-item  pull-right">
                        <a asp-action="Resume" asp-controller="Main" class="nav-link text-dark btn-outline-primary">My Resume</a>
                </li>

                   <li class="nav-item  pull-right">
                        <a asp-action="EmployeeApplications" asp-asp-controller="Main" class="nav-link text-dark btn-outline-primary">My Applications   </a>
                </li>
                     <li class="nav-item  pull-right">
                        <a class="nav-link text-dark btn-outline-primary">new post related to ur profile   </a>
                </li>
            
                   <li class="nav-item  pull-right">
                        <a class="nav-link text-dark btn-outline-primary">@User.Identity.Name</a>
                </li>
                        <li class="nav-item  pull-right">
                            <a class="nav-link text-dark btn-outline-primary" asp-area="" asp-controller="HiringManager" asp-action="Logout">Logout</a>

                </li>
            </ul>
            </div>
        </div>
</nav>





<div class="row">
    <div class="col-md-12">
        <center style="font-size: 30px;">List of avaliable Jobs</center>
    </div>
</div>





<div class="row">
    <div class="col-md-12">
      
            
                       @foreach(var item in Model.mainIndexjobs)

                            {


                                  <br><br>
                                  <br><br>
                      
                    <div class="Container">
                         <div class="card" style="">
                            <div class="card-body">
                                <h1 class="card-title">@item.JobTitle</h1>
                                <hr>
                                <h5 >@item.CompanyName</h5 >
                                <span>@item.dateTime</span>
                                <a asp-action="JobDetail" asp-controller="Main" asp-route-jobTitle="@item.JobTitle" asp-route-companyName="@item.CompanyName"  style="float: right;" >view Detail </a>
                     
                        
                            </div>
                         </div>
                    </div>
    

                                
                    }

             
    </div>
</div>
