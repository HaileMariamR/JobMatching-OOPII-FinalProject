@using Models.projectModels;
@model MainIndexModels;
@using System.Web;
@using  Microsoft.AspNetCore.Http;




@{
    Layout ="";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] | Job-matching</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<div class="text-center m-4 p-4">
    <h1>
        Main Index
    </h1>
            @* <h2>@Context.Request.Query["userEmailAddress"]</h2> *@
            <h1>@User.Identity.Name</h1>
    
</div>

   <li class="nav-item  ">
                            <a class="nav-link text-dark btn-outline-primary" asp-area="" asp-controller="HiringManager" asp-action="Logout">Logout</a>
                </li>



<div class="row">
    <div class="col-md-12">
        <h1>List of avaliable Jobs</h1>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
      
            
                       @foreach(var item in Model.mainIndexjobs)

                            {


                                <div class="card" style="">
                            <img src="..." class="card-img-top" alt="...">
                            <div class="card-body">
                                <h5 class="card-title">@item.JobTitle</h5>
                                <p>@item.JobDetail</p>
                                <a href="#" class="btn btn-primary">@item.CompanyName</a>
                                <p>@item.dateTime</p>
                            </div>
                            </div>
                                    
                             
                                
                                
                    }

             
    </div>
</div>
