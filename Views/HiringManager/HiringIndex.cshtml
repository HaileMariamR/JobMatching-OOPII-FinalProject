<div class="Container">


        <h1>Your Posts</h1>
    
                        @foreach(var item in Model)

                            {


                                    

                                    <div class="Container">
                         <div class="card" style="">
                            <div class="card-body">
                                <h1 class="card-title">@item.JobTitle</h1>
                                <hr>
                                <a style="font-size: 2rem;" >@item.CompanyName</a >
                                <p>@item.JobDetail</p>
                                <hr>
                                <span>@item.dateTime</span>
                                <a style="float: right;" href="">see an employee related to this job</a>
                     
                        
                            </div>
                         </div>
                    </div>
    
            <br>
