@{
    
    Layout ="~/Views/Shared/_HiringLayout.cshtml";

}
@using Microsoft.AspNetCore.Http;

@model Models.projectModels.Applicants;



<div style="margin-top:5rem" class="row">
    <div class="col-md-12">
        <h1>Applicant Detail</h1>
    </div>

</div>

<br>

@if(Model!=null){


    <div class="container">

        <div class="row">
            
                <div class="col-md-8">
                    <div class="card mb-3">
                        <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                            <h6 class="mb-0">Full Name</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                            @Model.FullName
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                            <h6 class="mb-0">Email</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                            @Model.Email
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                            <h6 class="mb-0">Phone</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                            @Model.PhoneNumber
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                            <h6 class="mb-0">Linkded In Link</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <a target="_blank" href="@Model.LinkedInLink"> @Model.LinkedInLink</a>

                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                            <h6 class="mb-0">Job Position</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.JobPostion
                            </div>
                        </div>
                        <hr>
                        
                        </div>
                </div>
                </div>
                </div>

        <div class="row">
            <div class="col-md-6">

                <form action="ViewApplicant" method="POST">
                    <input class="btn btn-primary"   asp-action="ViewApplicant" asp-controller="HiringManager"
                    asp-route-companyname='@ViewData["companyname"]'
                    asp-route-emploeeEmail='@ViewData["EmployeeEmail"]'
                    asp-route-jobtitle='@ViewData["jobtitle"]'
                    type="submit"
                     name="Accept" value="Accept" />
                </form>
            </div>
          

        </div>
        
        
        
        
    </div>

}


    <script src="~/js/btn.js" asp-append-version="true"></script>
