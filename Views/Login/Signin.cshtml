@{
    Layout ="";
}

 <div class="container">
      <div class="forms-container">
        <div class="signin-signup">
          <form name="form" class="sign-in-form" method="post" asp-asp-controller="Login" asp-action="Signin"  >
            <h2 class="title">Sign in</h2>
            <div class="input-field">
              <i class="fas fa-user"></i>
                <input asp-for="Email" type="text" class="form-control required" placeholder="Enter first name" tabindex="1" required>
            </div>
            <div class="input-field">
              <i class="fas fa-lock"></i>
                <input asp-for="Password" type="password" class="form-control required" placeholder="Enter last name" tabindex="2" required>

            </div>
            <input type="submit" value="Login" class="btn solid" />
          </form>


          <form name="myform" class="sign-up-form" method="post" asp-action="" >
            <h2 class="title">Sign up</h2>
            <div class="input-field">

              <i class="fas fa-user"></i>
              <input type="text" name="user" placeholder="fullName" />
            </div>
             <div class="input-field">

              <i class="fas fa-user"></i>
              <input type="text" name="user" placeholder="Mobile" />
            </div>
               <div class="input-field">

              <i class="fas fa-user"></i>
              <input type="text" name="user" placeholder="LinkedIn Link" />
            </div>
               <div class="input-field">

              <i class="fas fa-user"></i>
              <input type="text" name="user" placeholder="Job-Position" />
            </div>
            <div class="input-field">
              <i class="fas fa-envelope"></i>
              <input type="email" name="email" placeholder="Email" />
            </div>
            <div class="input-field">
              <i class="fas fa-lock"></i>
              <input type="password" name="password" placeholder="Password" />
            </div>
            
            <input type="submit" class="btn" value="Sign up" />
          </form>
        </div>
      </div>

      <div class="panels-container">
        <div class="panel left-panel">
          <div class="content">
            <h3>New here ?</h3>
            <p>
              Signup Here If You Don't Have Account.
            </p>
            <a asp-action="ApplicantSignup" asp-controller="Applicants" class="btn transparent" id="sign-up-btn">
              Register As Employee
            </a> <br><br><hr>
              <a asp-action="HiringManagerSignup" asp-controller="HiringManager" class="btn transparent" id="sign-up-btn">
              Register As HiringManager
            </a>
          </div>
        </div>
        <div class="panel right-panel">
          <div class="content">
            <h3>One of us ?</h3>
            <p>
              If You Already Have Account Signin Here.
            </p>
            <button class="btn transparent" id="sign-in-btn">
              Sign in
            </button>
          </div>
        </div>
      </div>
    </div>
   
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/signupin.js" asp-append-version="true"></script>
  
@section Scripts
{
    @if (TempData["notification"] != null)
    {
        @Html.Raw(TempData["notification"])
    }
}