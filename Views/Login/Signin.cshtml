@model Models.projectModels.Login;

@{
    Layout = "";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] | Job-matching</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<form asp-action="Signin" asp-area="" method="post">
    <div class="row">
        <div class="col-lg-12">
            <div class="form-group">
                <label>Email:</label>
                <input asp-for="Email" type="text" class="form-control required" placeholder="Enter first name" tabindex="1">
            </div>
             <div class="form-group">
                <label>Password:</label>
                <input asp-for="Password" type="text" class="form-control required" placeholder="Enter last name" tabindex="2">
            </div>
        
            <div class="form-group">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
            <div class="card-footer">
                <center>
                    <button type="submit" class="btn btn-primary">Login</button>
                </center>
            </div>
        </div>
    </div>
</form>