@{
    Layout="";  
}


@{
    ViewData["Title"] = "Signin";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] | Job-matching</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>



<center>Login</center>
<form asp-action="Signin" method="post">
    <div class="row">
        <div class="col-lg-12">
             <div class="form-group">
                <label>Email:</label>
                <input  type="email" class="form-control required" placeholder="Enter email" tabindex="3" required>
            </div>
             <div class="form-group">
                <label>Password:</label>
                <input  type="password" class="form-control required" placeholder="Enter mobile" tabindex="4" required>
            </div>
        
            <div class="card-footer">
                <center>
                    <button type="submit" asp-action="MainIndex" asp-controller="Mainpage" class="btn btn-primary">Login</button>
                </center>
            </div>
        </div>
    </div>
</form>


